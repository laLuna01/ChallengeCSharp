@model IEnumerable<ChallengeCSharp.Web.Models.ConsultaViewModel>

@{
    ViewData["Title"] = "Lista de Consultas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Nova Consulta
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Nenhuma consulta cadastrada ainda.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                <tr>
                    <th>Custo</th>
                    <th>Data da Consulta</th>
                    <th>Status do Sinistro</th>
                    <th>Tipo da Consulta</th>
                    <th>Paciente</th>
                    <th>Dentista</th>
                    <th class="text-center" style="width: 200px;">Ações</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Custo)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataConsulta)</td>
                        <td>@Html.DisplayFor(modelItem => item.StatusSinistro)</td>
                        <td>@Html.DisplayFor(modelItem => item.TipoConsulta)</td>
                        <td>@item.NomePaciente</td> <!-- mostra o nome do país -->
                        <td>@item.NomeDentista</td> <!-- mostra o nome do país -->
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-warning me-1" asp-action="Edit" asp-route-id="@item.IdConsulta">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdConsulta">
                                <i class="bi bi-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>