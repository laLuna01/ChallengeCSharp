@model ChallengeCSharp.Web.Models.EnderecoViewModel

@{
    ViewData["Title"] = "Editar Endereço";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-primary mb-4">@ViewData["Title"]</h2>

            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="CodEndereco" />

                <div class="mb-3">
                    <label asp-for="Logradouro" class="form-label">Logradouro</label>
                    <input asp-for="Logradouro" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Logradouro" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Numero" class="form-label">Número</label>
                    <input asp-for="Numero" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Numero" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CEP" class="form-label">CEP</label>
                    <input asp-for="CEP" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="CEP" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Referencia" class="form-label">Referência</label>
                    <input asp-for="Referencia" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Referencia" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CodBairro" class="form-label">Bairro</label>
                    <select asp-for="CodBairro" asp-items="Model.Bairros" class="form-select">
                        <option value="">-- Selecione um bairro --</option>
                    </select>
                    <span asp-validation-for="CodBairro" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}