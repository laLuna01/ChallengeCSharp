@model ChallengeCSharp.Web.Models.GeneroViewModel

@{
    ViewData["Title"] = "Criar Gênero";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="text-primary mb-4">@ViewData["Title"]</h2>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <input asp-for="Descricao" class="form-control" placeholder="Ex: Feminino, Masculino, Não-binário..." />
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Salvar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}