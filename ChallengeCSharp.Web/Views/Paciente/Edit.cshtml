@model ChallengeCSharp.Web.Models.PacienteViewModel

@{
    ViewData["Title"] = "Editar Paciente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-primary mb-4">@ViewData["Title"]</h2>

            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="IdPaciente" />

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Nome" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataNascimento" class="form-label">Data de Nascimento</label>
                    <input asp-for="DataNascimento" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="DataNascimento" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CPF" class="form-label">CPF</label>
                    <input asp-for="CPF" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="CPF" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdGenero" class="form-label">Gênero</label>
                    <select asp-for="IdGenero" asp-items="Model.Generos" class="form-select">
                        <option value="">-- Selecione um gênero --</option>
                    </select>
                    <span asp-validation-for="IdGenero" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdEndereco" class="form-label">Endereço</label>
                    <select asp-for="IdEndereco" asp-items="Model.Enderecos" class="form-select">
                        <option value="">-- Selecione um endereço --</option>
                    </select>
                    <span asp-validation-for="IdEndereco" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}