<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Odontoprev Sinistros</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ChallengeCSharp.Web.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            background-color: #ffffff;
            border-bottom: 2px solid #0d6efd33;
        }

        .navbar-brand img {
            max-height: 45px;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #0d6efd !important;
        }

        .navbar-nav .nav-link:hover {
            color: #0a58ca !important;
        }

        .footer {
            background-color: #f1f1f1;
            padding: 1rem 0;
            font-size: 0.9rem;
        }

        .footer a {
            color: #0d6efd;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        h1, h2, h3 {
            color: #0d6efd;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light shadow-sm mb-4">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.svg" alt="Odontoprev Logo" class="me-2"/>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Genero" asp-action="Index">Gêneros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Endereco" asp-action="Index">Endereços</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dentista" asp-action="Index">Dentistas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Paciente" asp-action="Index">Pacientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Consulta" asp-action="Index">Consultas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Tratamento" asp-action="Index">Tratamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Sinistro" asp-action="Index">Sinistros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Predicao" asp-action="Index">Predição</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-4">
        @RenderBody()
    </main>
</div>

<footer class="footer border-top text-muted mt-4">
    <div class="container text-center">
        &copy; 2025 - Odontoprev Sinistros
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
