@model ChallengeCSharp.Web.Models.SinistroViewModel

@{
    ViewData["Title"] = "Editar Sinistro";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-primary mb-4">@ViewData["Title"]</h2>

            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="IdSinistro" />

                <div class="mb-3">
                    <label asp-for="DataAbertura" class="form-label">Data de abertura</label>
                    <input asp-for="DataAbertura" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="DataAbertura" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Motivo" class="form-label">Motivo</label>
                    <input asp-for="Motivo" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Motivo" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <input asp-for="Status" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdConsulta" class="form-label">Consulta</label>
                    <select asp-for="IdConsulta" asp-items="Model.Consultas" class="form-select">
                        <option value="">-- Selecione uma consulta --</option>
                    </select>
                    <span asp-validation-for="IdConsulta" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}