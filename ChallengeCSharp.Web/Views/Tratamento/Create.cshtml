@model ChallengeCSharp.Web.Models.TratamentoViewModel

@{
    ViewData["Title"] = "Criar Tratamento";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="text-primary mb-4">@ViewData["Title"]</h2>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Custo" class="form-label">Custo</label>
                    <input asp-for="Custo" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Custo" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataInicio" class="form-label">Data de Início</label>
                    <input asp-for="DataInicio" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="DataInicio" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DataTermino" class="form-label">Data de Término</label>
                    <input asp-for="DataTermino" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="DataTermino" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoTratamento" class="form-label">Tipo da Tratamento</label>
                    <input asp-for="TipoTratamento" class="form-control" placeholder="Ex: São Paulo, California..." />
                    <span asp-validation-for="TipoTratamento" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdConsulta" class="form-label">Consulta</label>
                    <select asp-for="IdConsulta" asp-items="Model.Consultas" class="form-select">
                        <option value="">-- Selecione uma consulta --</option>
                    </select>
                    <span asp-validation-for="IdConsulta" class="text-danger small"></span>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Salvar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
